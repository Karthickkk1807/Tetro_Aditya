<div class="row justify-content-end mr-2 mt-2">
	<div class="searchbar">
		<input type="text" class="searchbar__input" name="q" id="tableFilter" placeholder="Search">
		<button type="submit" class="searchbar__button">
			<img src="~/assets/commonimages/search.svg" />
		</button>
	</div>

	<div class="datapiker ml-2 mt-1" style="position: relative;">
		<div class="add-imp-exp-btn">
			<div class="exportsiconpop">
				@{
					if (access.Create)
					{
						<span class="pop">
							<a id="AddCompanyDocument" title="Add CompanyDocument">
								<img src="~/assets/CommonImages/addicon.svg" style="height: 25px; width: 25px;" />
							</a>
						</span>
					}
				}
			</div>
		</div>
	</div>
</div>
<div class="" id="ProductDynamic">
	<div class="table-responsive">
		<table class="table table-rounded dataTable data-table table-striped tableResponsive" id="DocumentTable"></table>
	</div>
</div>


<div id="CompanyDocumentCanvas" class="offcanvas-container">
	<div class="offcanvas-header d-flex align-items-center justify-content-between">
		<h2 id="Header">Add Leave</h2>
		<span id="CloseCanvas" class="close"
			  style="font-size:30px;cursor:pointer;color:white;"
			  title="Close">&times;</span>
	</div>
	<div class="offcanvas-body">
		<form id="FormCompanyDocument">
			<div id="Styleenterydetalis" class="card-body">
				<div class="row">
					<div class="col-md-6 col-lg-6 col-sm-6 col-6">
						<div class="form-group">
							<label>Doc Name <span id="Asterisk">*</span></label>
							<input type="text" class="form-control" placeholder="Document Name" id="DocumentName" name="DocumentName" oninput="Common.allowOnlyTextLength(this,50)" required />
						</div>
					</div>

					<div class="col-md-6 col-lg-6 col-sm-6 col-6">
						<div class="form-group">
							<label>Doc Type  <span id="Asterisk">*</span></label>
							<select class="form-control" id="DocTypeId" name="DocTypeId" required>
							</select>
						</div>
					</div>

					<div class="col-md-6 col-lg-6 col-sm-6 col-6 ">
						<div class="form-group">
							<label>Registered On  <span id="Asterisk">*</span></label>
							<input type="date" class="form-control" id="ActivatedOn" name="ActivatedOn" required />
						</div>
					</div>

					<div class="col-md-6 col-lg-6 col-sm-6 col-6 ">
						<div class="form-group">
							<label>Expired  On <span id="Asterisk">*</span></label>
							<input type="date" class="form-control" id="ExpiredDate" name="ExpiredDate" required />
						</div>
					</div>


					<div class="col-md-12 col-lg-12 col-sm-12 col-12" id="">
						<div class="form-group">
							<label> Description</label>
							<textarea class="form-control" id="Description" autocomplete="off" name="Description" rows="1" oninput="Common.allowAllCharacters(this,250)" placeholder="Description"></textarea>
						</div>
					</div>

					<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mt-2" id="Attachrow">
						<div class=" border border-radius" style="background-color:#F1F0EF; max-height:10.5rem;height: 138px;">
							<label class=" d-flex justify-content-center align-content-center mt-1" style="text-decoration:underline; color:#7D7C7C;">
								<b style="cursor:pointer;">Click Here to Attach your files</b>
								<input type="file" id="fileInput" class="custom-file-input" accept=".pdf, .xls, .xlsx, image/*">
							</label>
							<div class="file-preview d-flex justify-content-center" id="preview">
								<div class="attachrow">
									<div class="attachcolumn">
										<ul id="selectedFiles"></ul>
									</div>
									<div class="attachcolumn"><ul id="ExistselectedFiles"></ul></div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

		</form>
	</div>
	<div class="offcanvas-footer">
		<div class="col-md-12 col-lg-12">
			<div class="form-group text-center">
				<div class="card-action">
					<a class="btn btn-success m-r-20 text-white" id="SaveCompanyDocument">Save</a>
				</div>
			</div>
		</div>
	</div>
</div>


<script>
	var access = @Html.Raw(Json.Serialize(access));
	var isAdminAccess = "@isAdmin";
</script>

<script src="~/js/companydocuments.js"></script>