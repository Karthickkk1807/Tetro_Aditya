<div id="MaintenanceLogCanvas" class="offcanvas-container">
    <div class="offcanvas-header d-flex align-items-center justify-content-between">
        <h2 id="MaintenanceLogHeader">Add New MaintenanceLog</h2>
        <span id="CloseCanvas" class="close"
              style="font-size:30px;cursor:pointer;color:white;"
              title="Close">&times;</span>
    </div>

    <div class="offcanvas-body">
        <div class="row">
            <div class="col-12">
                <div class="accordion" id="styleAccordionluf3ws29vt">
                    <div class="accordion-header">
                        <h2 id="Styleentery" class="mb-0 Styleentery">
                            <a data-toggle="collapse" data-target="#collapse1" aria-expanded="true" aria-controls="collapseOne1" class="">
                                <p class="d-flex align-items-center justify-content-between mb-0 px-3 py-2">
                                    <strong class="text-white">
                                        Maintenance Plan Info
                                    </strong>
                                    <i class="fas fa-angle-down text-white"></i>
                                </p>
                            </a>
                        </h2>
                    </div>
                    <div id="collapse1" class="collapse show" aria-labelledby="headingOne" data-parent="#styleAccordion1" style="">
                        <div id="Styleenterydetalis" class="card-body">
                            <form id="FormMaintenanceLog">
                                <div class="row">
                                    <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                                        <div class="form-group">
                                            <label>MaintenanceLog No<span id="Asterisk">*</span></label>
                                            <input type="text" class="form-control" placeholder="MP/2025-0001" id="MaintenanceLogNo" name="MaintenanceLogNo" required maxlength="50" disabled />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                                        <div class="form-group">
                                            <label>MaintenanceDate<span id="Asterisk">*</span></label>
                                            <input type="date" class="form-control" placeholder="Ex: 101, Ashoka Nagar" id="MaintenanceLogdate" name="MaintenanceLogdate" maxlength="500" required />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                                        <div class="form-group">
                                            <label>Maintanence Plan Type<span id="Asterisk">*</span></label>
                                            <select class="form-control" id="DepartmentId" name="DepartmentId" required>
                                                <option value="">--Select--</option>
                                                <option value="1">Planned</option>
                                                <option value="2">Adhoc</option>
                                            </select>

                                        </div>
                                    </div>


                                    <div class="col-md-6 col-lg-6 col-sm-6 col-6 PlanNoDiv" style="display: none;">
                                        <div class="form-group">
                                            <label>PlanNo<span id="Asterisk">*</span></label>
                                            <select class="form-control" id="PlanTypeId" name="PlanTypeId" required>
                                                <option value="">--Select--</option>
                                                <option value="1">MP-001</option>
                                                <option value="2">MP-002</option>
                                                <option value="3">MP-003</option>
                                            </select>

                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                                        <div class="form-group">
                                            <label>Downtime</label>
                                            <input type="text" class="form-control" placeholder="0" id="Downtime" name="Downtime" maxlength="50" />
                                        </div>
                                    </div>
                                    <div id="PlanDetailsContainer" class="mt-0" style="padding:15px;"></div>


                                    

                                    <div class="col-md-12 col-lg-12 col-sm-12 col-12 spareDiv" style="display: none;">
                                        <div class="form-group">
                                            <label>Spare Parts</label>
                                            <select multiple class="form-control select2 SpareParts"
                                                    id="SpareParts"
                                                    name="SpareParts"
                                                    data-select2-id="SpareParts"
                                                    tabindex="-1" aria-hidden="true">
                                                <option value="Wrench Heads">Wrench Heads</option>
                                                <option value="Ratchet Handles">Ratchet Handles</option>
                                                <option value="Socket Extensions">Socket Extensions</option>
                                                <option value="Adapter Sets">Adapter Sets</option>

                                                <!-- Screwdriver Kit Spare Parts -->
                                                <option value="Phillips Bits">Phillips Bits</option>
                                                <option value="Flathead Bits">Flathead Bits</option>
                                                <option value="Torx Bits">Torx Bits</option>
                                                <option value="Hex Bits">Hex Bits</option>
                                                <option value="Bit Holders">Bit Holders</option>
                                            </select>
                                        </div>
                                    </div>
                                    

                                    <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                                        <div class="form-group">
                                            <label>Technician<span id="Asterisk">*</span></label>
                                            <select class="form-control" id="PlanTypeId" name="PlanTypeId" required>
                                                <option value="">--Select Technician--</option>
                                                <option value="1">Arun Kumar</option>
                                                <option value="2">Vijay Raj</option>
                                                <option value="3">Suresh Babu</option>
                                                <option value="4">Manikandan</option>
                                                <option value="5">Karthikeyan</option>
                                            </select>

                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                                        <div class="form-group">
                                            <label>Status<span id="Asterisk">*</span></label>
                                            <select class="form-control" id="StatusId" name="StatusId" required>
                                                <option value="">--Select--</option>
                                                <option value="1">Completed</option>
                                                <option value="2">Partially Completed</option>
                                                <option value="3">Completed</option>
                                                <option value="4">Delayed</option>
                                            </select>

                                        </div>
                                    </div>

                                    <div class="col-md-12 col-lg-12 col-sm-12 col-12">
                                        <div class="form-group">
                                            <label>Remarks</label>
                                            <textarea class="form-control" id="Remark" autocomplete="off" name="Remark" rows="1" maxlength="250" placeholder="Remarks"></textarea>
                                        </div>
                                    </div>


                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


