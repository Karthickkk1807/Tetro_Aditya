<div id="PaymentModal" class="modal" data-bs-backdrop="static" data-bs-keyboard="false" style="display:none;">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header d-flex align-items-center justify-content-between">
                <h2 id="PaymentHeader">Add New Payment</h2>
                <span id="PaymentClose" class="close" style="font-size:30px;cursor:pointer;color:white;" title="Close">×</span>
            </div>
            <div class="modal-body" style="max-height: 80vh; overflow-y: auto; overflow-x: hidden; padding: 0px 0px 10px 0px;">
                <div class="mx-2">
                    <form id="FormPayment">
                        <div class="row mt-2 mb-2">
                            <div class="col-lg-2 col-md-6 col-sm-6 col-6">
                                <div class="form-group">
                                    <label>Date</label>
                                    <input type="date" class="form-control" id="PaymentDate" name="PaymentDate" required>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-6 col-sm-6 col-6">
                                <div class="form-group">
                                    <label>Franchise<span id="Asterisk">*</span></label>
                                    <select class="form-control" id="FranchiseId" name="FranchiseId" required>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-6 col-sm-6 col-6">
                                <div class="form-group">
                                    <label>Payment Type<span id="Asterisk">*</span></label>
                                    <select class="form-control" id="PaymentTypeId" name="PaymentTypeId" required>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-6 col-sm-6 col-6">
                                <div class="form-group">
                                    <label for="Pay Category">Pay Category<span id="Asterisk">*</span></label>
                                    <select class="form-control" id="PaymentCategory" name="PaymentCategory" required>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-6 col-sm-6 col-6">
                                <div class="form-group">
                                    <label for="productCategory" id="ContactIdLabel"></label><span id="Asterisk">*</span>
                                    <select class="form-control" id="ContactId" name="ContactId" required>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-6 col-sm-6 col-6">
                                <div class="form-group">
                                    <label>Payment No</label>
                                    <input type="text" class="form-control" id="PaymentNo" name="PaymentNo" oninput="Common.allowOnlyTextLength(this, 25)" placeholder="PaymentNo" disabled>
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-md-12">
                                <div class="table-container">
                                    <div class="scrollable-table">
                                        <table class="table  table-head-bg-primary borderless1 table-hover1 tab_logic mb-0" id="paymentTable">
                                            <thead class="paymentTableHead">
                                                <tr>
                                                    <th class="p-2"> Bill No <span style="visibility:hidden;">1111111</span></th>
                                                    <th class="p-2">Amount</th>
                                                    <th class="p-2">Paid Amount</th>
                                                    <th class="p-2">Balance Amount</th>
                                                    <th class="p-2">Mode of Payment</th>
                                                    <th class="p-2">Status</th>
                                                    <th class="p-1"></th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-lg-3 col-md-6 mt-4" id="Attachrow">
                                <div class=" border border-radius" style="background-color:#F1F0EF; max-height:10.5rem;height: 82px;">
                                    <!-- Add a custom button for choosing files -->
                                    <label class=" d-flex justify-content-center align-content-center mt-1" style="text-decoration:underline; color:#7D7C7C;">
                                        <b>Click Here to Attach your files</b>
                                        <input type="file" id="fileInput" multiple="" class="custom-file-input">
                                    </label>
                                    <div class="file-preview d-flex justify-content-center" id="preview" style="height: 57px;">
                                        <div class="attachrow">
                                            <div class="attachcolumn">
                                                <ul class="row justify-content-center px-3 mb-2" id="selectedFiles"></ul>
                                            </div>
                                            <div class="attachcolumn"><ul class="row justify-content-center px-3 mb-2" id="ExistselectedFiles"></ul></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class=" col-lg-7 col-md-6 mt-2">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 mt-2">
                                        <label><b>Comments</b></label>
                                        <textarea class="form-control" id="Comments" name="Comments" style="overflow-y: auto;" rows="3" oninput="Common.allowAllCharacters(this,250)"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-center align-items-center w-100">
                <div>
                    <button type="button" id="SavePayment" class="btn text-white btn-added mr-2" fdprocessedid="56heq">Save</button>
                    <button type="button" id="ClosePayment" class="btn btn-danger" data-dismiss="modal" fdprocessedid="fmiob">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
