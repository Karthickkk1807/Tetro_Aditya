<div id="DeliveryPlanModal" class="modal" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header d-flex align-items-center justify-content-between">
                <h2 id="ModalTitle"></h2>
                <span class="close" style="font-size:30px;cursor:pointer;color:white;" title="Close">×</span>
            </div>

            @* <div class="modal-body" style="max-height: 70vh; overflow-y: auto; overflow-x: hidden; padding: 0px 0px 10px 0px;"> *@
            <div class="modal-body">
                <form id="FormDeliveryPlan">
                    <div class="row px-2 mb-2 align-items-center">
                        <div class="col-lg-2 col-md-6 col-sm-4 col-4" id="DeliveryPlanDateDiv">
                            <div class="form-group">
                                <label>Date<span id="Asterisk">*</span></label>
                                <input type="date" id="DeliveryPlanDate" name="DeliveryPlanDate" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-6 col-sm-4 col-4" id="ToFranchiseIdDiv">
                            <div class="form-group">
                                <label>Franchise<span id="Asterisk">*</span></label>
                                <select class="form-control" id="ToFranchiseId" name="ToFranchiseId" required>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-4 col-4" id="RouteDiv">
                            <div class="form-group">
                                <label>Route<span id="Asterisk">*</span></label>
                                <input class="form-control" id="Route" name="Route" placeholder="Ex: Coimbatore" oninput="Common.allowOnlyTextLength(this,50)" required />
                            </div>
                        </div>
                    </div>

                    <ul class="nav nav-tabs pl-2 mb-2" id="myTabInOut" role="tablist">
                        <li class="nav-item submenu" role="presentation" style="z-index: 99999999;position: relative;">
                            <a class="nav-link navbar-tab active" id="Distributor-TabBtn" data-bs-toggle="tab" role="tab" aria-controls="home" aria-selected="true">Distributor Mapping</a>
                        </li>

                        <li class="nav-item submenu" role="presentation" style="z-index: 99999999;position: relative;">
                            <a class="nav-link navbar-tab" id="Expense-TabBtn" data-bs-toggle="tab" role="tab" aria-controls="home" aria-selected="true">Expense Mapping</a>
                        </li>
                        <li style="margin-left: auto;">
                            <div class="searchbar">
                                <input type="text" class="searchbar__inputManageStock" name="tableForPopFilter" id="tableForPopFilter" placeholder="Search">
                                <button type="button" class="searchbar__button">
                                    <img src="/assets/commonimages/search.svg">
                                </button>
                            </div>
                            <button id="DyanmicRowAdd" class="btn AddStockBtn" type="button">
                                <i class="fas fa-plus" id="AddButton"></i>
                            </button>
                        </li>
                    </ul>

                    <div class="tab-pane" id="Distributor-TabRecord" role="tabpanel" aria-labelledby="Distributor-TabBtn">
                        <div class="table-wrapper mt--1">
                            <table class="table table-bordered mb-0">
                                <thead class="DistributorRow">
                                    <tr>
                                        <th>Distributor<span style="visibility: hidden;">11111111111</span></th>
                                        <th>DeliveryTime</th>
                                        <th>Product<span style="visibility: hidden;">1111111</span></th>
                                        <th>Unit<span style="visibility: hidden;">11111111</span></th>
                                        <th>POQuantity</th>
                                        <th>Quantity</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="dynamicDistributor">
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="container-fluid" style="max-height: 95.5px;overflow-y: auto;display: block;overflow-x: hidden;">
                        <div class="ExpenseDetails mt--1">
                        </div>
                    </div>
                    <div class="row mt-2 mb-2" id="AmountMainDiv">
                        <div class="col-7"></div>
                        <div class="col-4">
                            <div class="TopBorder"></div>
                            <span class="Amount"></span>
                            <div class="BottomBorder"></div>
                        </div>
                        <div class="col-1"></div>
                    </div>
                </form>
            </div>
            <div class="row d-flex justify-content-end mt--2" id="Distributor-RecordFooter">
                <div class="" style="margin-right:-27px !important">
                    <div class="form-group">
                        <label>No Of Distributor</label>
                        <input type="text" id="NoOfDistributor" name="NoOfDistributor" class="form-control" placeholder="Distributor" disabled style="width: 64%;">
                    </div>
                </div>
                <div class="" style="margin-right: -44px !important;">
                    <div class="form-group">
                        <label>No Of Product</label>
                        <input type="text" id="NoOfProducts" name="NoOfProducts" class="form-control" placeholder="Product" disabled style="width: 54%;">
                    </div>
                </div>
                <div class="" style="margin-right: -44px !important;">
                    <div class="form-group">
                        <label>Total Qty_RGB</label>
                        <input type="text" id="TotalBalanceRGB" name="TotalBalanceRGB" class="form-control" placeholder="RGB" disabled style="width: 54%;">
                    </div>
                </div>
                <div class="" style="margin-right: -44px !important;">
                    <div class="form-group">
                        <label>Total Qty_PET</label>
                        <input type="text" id="TotalBalancePET" name="TotalBalancePET" class="form-control" placeholder="PET" disabled style="width: 54%;">
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-content-end mt--2" id="Expense-RecordFooter">
                <div class="" style="margin-right: -24px !important;">
                    <div class="form-group">
                        <label>PerBottle Cost</label>
                        <input type="text" id="PerBottleCost" name="PerBottleCost" class="form-control" placeholder="Cost" disabled style="width: 68%;">
                    </div>
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-center align-items-center w-100">
                <div class="row">
                    <div class="col-12">
                        <input type="button" class="btn btn-primary" id="SaveDeliveryPlan" value="Save">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


