<div id="TargetvsActual" class="offcanvas-container">
    <div class="offcanvas-header d-flex align-items-center justify-content-between">
        <h2 id="TargetvsActualHeader">Target vs Actual</h2>
        <span id="CloseCanvas" class="close"
              style="font-size:30px;cursor:pointer;color:white;"
              title="Close">&times;</span>
    </div>

    <div class="offcanvas-body">
        <form id="FormTarget">
        <div class="row">
            
                <div class="col-md-6 col-lg-6 col-sm-6 col-6" id="FranchiseIdDiv">
                <div class="form-group">
                    <label>Franchise<span id="Asterisk">*</span></label>
                    <select class="form-control" id="FranchiseId" name="FranchiseId" required disabled></select>

                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-sm-6 col-6" id="MonthsDiv">
                <div class="form-group">
                    <label>Month<span id="Asterisk">*</span></label>
                    <select class="form-control" id="Months" name="Months" required></select>

                </div>
            </div>
             <div class="col-md-6 col-lg-6 col-sm-6 col-6" id="NoOfDaysDiv">
                <div class="form-group">
                        <label>No Of Days<span id="Asterisk">*</span></label>
                    <select class="form-control" id="NoOfDays" name="NoOfDays" required></select>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-sm-6 col-6" id="TargetQtyDiv">
                <div class="form-group">
                        <label>Target Qty<span id="Asterisk">*</span></label>
                    <div class="input-group">
                        <input type="number" class="form-control" placeholder="Ex: 100" id="TargetQty" name="TargetQty" required>
                        <button class="btn btn-outline-secondary" type="button">Bottles</button>
                    </div>

                </div>
            </div>

           
           
        </div>
         </form>

       
        <div id="EditContainer" class="row mt-2">
            <div class="col-md-6 col-lg-4 col-sm-6 col-6">
                <div class="form-group">
                    <label>Completed Days</label>
                    <input type="text" class="form-control" id="CompletedDays" name="CompletedDays" disabled>
       
                </div>
            </div>
            <div class="col-md-6 col-lg-4 col-sm-6 col-6">
                <div class="form-group">
                    <label>OutWard Qty</label>
                    <input type="text" class="form-control" id="CompletedQty" name="CompletedQty" disabled>
       
                </div>
            </div>
            <div class="col-md-6 col-lg-4 col-sm-6 col-6">
                <div class="form-group">
                    <label>Completed Percentage</label>
                    <input type="text" class="form-control" id="CompletedPercentage" name="CompletedPercentage" disabled>
       
                </div>
            </div>
            <div class="col-md-6 col-lg-4 col-sm-6 col-6">
                <div class="form-group">
                    <label>Remaining Days</label>
                    <input type="text" class="form-control" id="RemainingDays" name="RemainingDays" disabled>
       
                </div>
            </div>
            <div class="col-md-6 col-lg-4 col-sm-6 col-6">
                <div class="form-group">
                    <label>Yet To Production</label>
                    <input type="text" class="form-control" id="RemainingQty" name="RemainingQty" disabled>
       
                </div>
            </div>
            <div class="col-md-6 col-lg-4 col-sm-6 col-6">
                <div class="form-group">
                    <label>Yet To Percentage</label>
                    <input type="text" class="form-control" id="RemainingPercentage" name="RemainingPercentage" disabled>
       
                </div>
            </div>  

            <div class="col-12 mt-3">

                <table id="productionTable" class="table table-bordered table-striped text-center">
                </table>

            </div>

            

        </div>
        
    </div>

    <div class="offcanvas-footer">
        <div class="col-md-12 col-lg-12">
            <div class="form-group text-center">
                <div class="card-action">
                    <a class="btn btn-success m-r-20 text-white" id="SaveTargetvsActual">Save</a>
                </div>

            </div>
        </div>
    </div>
