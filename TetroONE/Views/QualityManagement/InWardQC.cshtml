<div id="InWardQCCanvas" class="offcanvas-container">
    <div class="offcanvas-header d-flex align-items-center justify-content-between">
        <h2 id="InWardQCHeader">Add New InWardQC</h2>
        <span id="CloseCanvas" class="close"
              style="font-size:30px;cursor:pointer;color:white;"
              title="Close">&times;</span>
    </div>
    <div class="offcanvas-body">
        <form id="FormProcessing">
            <div class="row">
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>InwardQC No<span id="Asterisk">*</span></label>
                        <input type="text" class="form-control" placeholder="Ex: INW/QC/001" id="InwardQCNo" name="InwardQCNo" required disabled />
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>InwardQC Date<span id="Asterisk">*</span></label>
                        <input type="date" class="form-control" id="InwardQCDate" name="InwardQCDate" required />
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Inspector Name<span id="Asterisk">*</span></label>
                        <select class="form-control" id="InspectorName" name="InspectorName" required>
                            <option value="">--Select--</option>
                            <option value="1">RAGHURAMAN GOBINATHAN</option>
                            <option value="2">KARTHIKEYANI</option>
                            <option value="3">MITHRAN</option>
                            <option value="4">DEXY</option>
                            <option value="5">INDRASENAN</option>
                            <option value="6">KAVINESH RAJASEKAR</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Inward No<span id="Asterisk">*</span></label>
                        <select class="form-control" id="InwardNo" name="InwardNo" required>
                            <option value="">--Select--</option>
                            <option value="1">INW/NO/001</option>
                            <option value="2">INW/NO/002</option>
                            <option value="3">INW/NO/003</option>
                            <option value="4">INW/NO/004</option>
                            <option value="5">INW/NO/005</option>
                            <option value="6">INW/NO/006</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Inward Date</label>
                        <input type="date" class="form-control" id="InwardDate" name="InwardDate" required disabled />
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Transaction Type</label>
                        <select class="form-control" id="SaleOrderNoId" name="SaleOrderNoId" required disabled>
                            <option value="">--Select--</option>
                            <option value="1" selected>Purchase</option>
                            <option value="2">Job Work</option>
                            <option value="3">Internal Transfer</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Vendor Name</label>
                        <select class="form-control" id="VendorName" name="VendorName" required disabled>
                            <option value="">--Select--</option>
                            <option value="1">VAITHEESH</option>
                            <option value="2" selected>RPKS & CO</option>
                            <option value="3">VENKATRAMAN</option>
                            <option value="4">JAYAM SCIENTIFIC	</option>
                            <option value="5">RM CHEMICAL</option>
                            <option value="6">AISWARYA WATERS</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Vendor Inv No</label>
                        <input type="text" class="form-control" placeholder="Ex: VEN/NO/001" id="VendorInvNo" name="VendorInvNo" required disabled />
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>PurchaseOrder No</label>
                        <select class="form-control" id="PurchaseOrderNo" name="PurchaseOrderNo" required disabled>
                            <option value="">--Select--</option>
                            <option value="1">PO/NO/001</option>
                            <option value="2">PO/NO/002</option>
                            <option value="3">PO/NO/003</option>
                            <option value="4">PO/NO/004</option>
                            <option value="4">PO/NO/005</option>
                            <option value="4">PO/NO/006</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>SaleOrder No<span id="Asterisk">*</span></label>
                        <select class="form-control" id="SaleOrderNoId" name="SaleOrderNoId" required>
                            <option value="">--Select--</option>
                            <option value="1">SALE/NO/001</option>
                            <option value="2">SALE/NO/002</option>
                            <option value="3">SALE/NO/003</option>
                            <option value="4">SALE/NO/004</option>
                            <option value="5">SALE/NO/005</option>
                            <option value="5">SALE/NO/006</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Vendor Inv No<span id="Asterisk">*</span></label>
                        <input type="text" class="form-control" placeholder="Ex: VEN/NO/001" id="VendorInvNo" name="VendorInvNo" required />
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>FabricCode<span id="Asterisk">*</span></label>
                        <select class="form-control" id="FabricCodeId" name="FabricCodeId" required>
                            <option value="">--Select--</option>
                            <option value="1">C100</option>
                            <option value="2">PC65/35</option>
                            <option value="3">R100</option>
                            <option value="4">N100</option>
                            <option value="5">P100</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Width<span id="Asterisk">*</span></label>
                        <div id="ember325" class="input-group ember-view" style="flex-wrap: nowrap;">
                            <input type="text" class="form-control" placeholder="Ex: 30 KG" id="Width" name="Width" required oninput="Common.allowOnlyNumbersAndDecimalInventory(this)" />
                            <select class="form-control" id="WidthUnitId" name="WidthUnitId" required style="width: 38%;">
                                <option value="">--Select--</option>
                                <option value="1">Meter</option>
                                <option value="2">Kg</option>
                                <option value="3">Roll</option>
                                <option value="4">MMeter</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>GSM<span id="Asterisk">*</span></label>
                        <input type="text" class="form-control" placeholder="Ex: 200 GSM" id="GSM" name="GSM" required />
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Weight<span id="Asterisk">*</span></label>
                        <div id="ember325" class="input-group ember-view" style="flex-wrap: nowrap;">
                            <input type="text" class="form-control" placeholder="Ex: 30 KG" id="Weight" name="Weight" required oninput="Common.allowOnlyNumbersAndDecimalInventory(this)" />
                            <select class="form-control" id="WeightUnitId" name="WeightUnitId" required style="width: 38%;">
                                <option value="">--Select--</option>
                                <option value="1">Meter</option>
                                <option value="2">Kg</option>
                                <option value="3">Roll</option>
                                <option value="4">MMeter</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Batch Reference<span id="Asterisk">*</span></label>
                        <input type="text" class="form-control" placeholder="Ex: Aditya Factory" id="BatchReference" name="BatchReference" required />
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Lot/Batch No<span id="Asterisk">*</span></label>
                        <input type="text" class="form-control" placeholder="Ex: LOT/BAT/001" id="LotBatchNo" name="LotBatchNo" maxlength="50" required disabled />
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Roll Count<span id="Asterisk">*</span></label>
                        <input type="number" class="form-control" placeholder="Ex: 100" id="RollCount" name="RollCount" required />
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Quantity Received<span id="Asterisk">*</span></label>
                        <div id="ember325" class="input-group ember-view" style="flex-wrap: nowrap;">
                            <input type="text" class="form-control" placeholder="Ex: 40 M" id="QuantityReceived" name="QuantityReceived" required oninput="Common.allowOnlyNumbersAndDecimalInventory(this)" />
                            <select class="form-control" id="QuantityReceivedUnitId" name="QuantityReceivedUnitId" required style="width: 38%;">
                                <option value="">--Select--</option>
                                <option value="1">Meter</option>
                                <option value="2">Kg</option>
                                <option value="3">Roll</option>
                                <option value="4">MMeter</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Fabric Type<span id="Asterisk">*</span></label>
                        <select class="form-control" id="FabricType" name="FabricType" required>
                            <option value="">--Select--</option>
                            <option value="1">Woven</option>
                            <option value="2">Knitted</option>
                            <option value="3">Terry</option> 
                        </select>
                    </div>
                </div>
                <div class="col-md-3 col-lg-3 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Visual Defects<span id="Asterisk">*</span></label>
                        <input type="text" class="form-control" placeholder="Ex: 100" id="VisualDefects" name="VisualDefects" required />
                    </div>
                </div>
                <div class="col-md-3 col-lg-3 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Shrinkage %</label>
                        <input type="text" class="form-control" placeholder="Ex: 2.4%" id="ShrinkagePercent" name="ShrinkagePercent" />
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>GSM Check</label>
                        <input type="text" class="form-control" placeholder="Ex: 180 GSM" id="GSMCheck" name="GSMCheck" />
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Width Check</label>
                        <input type="text" class="form-control" placeholder="EX: 152 CM" id="WidthCheck" name="WidthCheck" />
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Shade Check<span id="Asterisk">*</span></label>
                        <select class="form-control" id="ShadeCheckType" name="ShadeCheckType" required>
                            <option value="">--Select--</option>
                            <option value="1">Pass</option>
                            <option value="2">Fail</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Handle / Feel<span id="Asterisk">*</span></label>
                        <select class="form-control" id="HandleFeelType" name="HandleFeelType" required>
                            <option value="">--Select--</option>
                            <option value="1">Light-weight feel</option>
                            <option value="2">Medium-weight feel</option>
                            <option value="3">Moderate stretch</option>
                            <option value="4">Very Soft</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-6">
                    <div class="form-group">
                        <label>QC Status<span id="Asterisk">*</span></label>
                        <select class="form-control" id="QCStatus" name="QCStatus" required>
                            <option value="">--Select--</option>
                            <option value="1">Approved</option>
                            <option value="2">Hold</option>
                            <option value="3">Rejected</option> 
                        </select>
                    </div>
                </div>
                <div class="col-md-12 col-lg-12 col-sm-6 col-6">
                    <div class="form-group">
                        <label>QC Remarks<span id="Asterisk">*</span></label>
                        <textarea class="form-control" id="QCRemarks" name="QCRemarks" rows="1" oninput="Common.allowAllCharacters(this,250)" placeholder="Ex: Querys"></textarea>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="offcanvas-footer">
        <div class="col-md-12 col-lg-12">
            <div class="form-group text-center">
                <div class="card-action">
                    <a class="btn btn-success m-r-20 text-white" id="SaveInWardQC">Save</a>
                </div>

            </div>
        </div>
    </div>
