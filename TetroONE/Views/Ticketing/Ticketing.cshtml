<div id="TicketingCanvas" class="offcanvas-container">
    <div class="offcanvas-header d-flex align-items-center justify-content-between">
        <h2 id="TicketingHeader"></h2>
        <span id="CloseTicketing" class="close"
              style="font-size:30px;cursor:pointer;color:white;"
              title="Close">&times;</span>
    </div>
    <div class="offcanvas-body">
        <form id="TicketingInfoForm">
            <div class="row">
                <div class="col-md-4 col-lg-4 col-sm-4 col-6">
                    <div class="form-group">
                        <label>Tickect No<span id="Asterisk">*</span></label>
                        <input type="text" class="form-control" placeholder="Ex: KGS_TECK_101" id="TicketNo" name="TicketNo" disabled />
                    </div>
                </div>

                <div class="col-md-4 col-lg-4 col-sm-4 col-6">
                    <div class="form-group">
                        <label>Tickecting Type<span id="Asterisk">*</span></label>
                        <select class="form-control" id="TickectingTypeId" name="TickectingTypeId" required>
                        </select>
                    </div>
                </div>

                <div class="col-md-4 col-lg-4 col-sm-4 col-6">
                    <div class="form-group">
                        <label>Created By<span id="Asterisk">*</span></label>
                        @* <select class="form-control" id="CreatedById" name="CreatedById" required>
                        </select> *@
                        <input type="text" class="form-control" placeholder="Ex: ....." id="CreatedById" name="CreatedById" disabled />
                    </div>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-4 col-6 ExternalTypeDiv">
                    <div class="form-group">
                        <label>External Type<span id="Asterisk">*</span></label>
                        <select class="form-control" id="ExternalTypeId" name="ExternalTypeId" required>
                        </select>
                    </div>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-4 col-6 VendorDiv">
                    <div class="form-group">
                        <label>Vendor<span id="Asterisk">*</span></label>
                        <select class="form-control" id="VendorId" name="VendorId" required>
                        </select>
                    </div>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-4 col-6 ClientDiv">
                    <div class="form-group">
                        <label>Client<span id="Asterisk">*</span></label>
                        <select class="form-control" id="ClientId" name="ClientId" required>
                        </select>
                    </div>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-4 col-6">
                    <div class="form-group">
                        <label>Date<span id="Asterisk">*</span></label>
                        <input type="date" class="form-control" id="TicketDate" name="TicketDate" required>
                    </div>
                </div>

                <div class="col-md-4 col-lg-4 col-sm-4 col-6">
                    <div class="form-group">
                        <label>Module Type<span id="Asterisk">*</span></label>
                        <select class="form-control" id="ModuleTypeId" name="ModuleTypeId" required>
                        </select>
                    </div>
                </div>

                <div class="col-md-4 col-lg-4 col-sm-4 col-6 AssignedToDiv">
                    <div class="form-group">
                        <label>Assigned To<span id="Asterisk">*</span></label>
                        <select class="form-control" id="AssignedToId" name="AssignedToId" required>
                        </select>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Query<span id="Asterisk">*</span></label>
                        <textarea class="form-control" id="Query" name="Query" style="overflow-y: auto;" rows="2" oninput="Common.allowAllCharacters(this,250)" required></textarea>
                    </div>
                </div>

                <div class="col-lg-8 col-md-8 col-sm-8 col-8 mt-2" id="Attachrow">
                    <div class="border border-radius" style="background-color:#F1F0EF; max-height:10.5rem;height: 95px;">

                        <label class=" d-flex justify-content-center align-content-center mt-1" style="text-decoration:underline; color:#7D7C7C;">
                            <b>Click Here to Attach your files</b>
                            <input type="file" id="fileInput" multiple="" class="custom-file-input">
                        </label>

                        <div class="file-preview d-flex justify-content-center" id="preview" style="height: 57px;">
                            <div class="attachrow">
                                <div class="attachcolumn">
                                    <ul class="row justify-content-center px-3 mb-2" id="selectedFiles"></ul>
                                </div>
                                <div class="attachcolumn"><ul class="row justify-content-center px-3 mb-2" id="ExistselectedFiles"></ul></div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-md-4 col-lg-4 col-sm-4 col-6" id="StatusHide">
                    <div class="form-group">
                        <label>Status<span id="Asterisk">*</span></label>
                        <select class="form-control" id="TicketStatusId" name="TicketStatusId" required>
                        </select>
                    </div>
                </div>

            </div>
        </form>

        <div class="row" id="HidingDynamicRow">
            <div class="col-md-12 col-lg-12 col-sm-12 col-6">
                <form id="FormFollowUpInfo">
                    <fieldset class="expensefild_1">
                        <legend class="w-auto">Followup Info Details</legend>
                        <div class="d-flex justify-content-end align-items-start mt--1" id="dynamicButtonDiv">
                            <button id="" class="btn AddStockBtn" type="button" onclick="DynamicHtml(this)">
                                <i class="fas fa-plus" id="AddButton"></i>
                            </button>
                        </div>
                        <div class="" id="BindFollowupInfo">
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <div class="offcanvas-footer">
        <div class="col-md-12 col-lg-12">
            <div class="form-group text-center">
                <div class="card-action">
                    <a class="btn btn-success m-r-20 text-white" id="SaveTicketing">Save</a>
                    <a class="btn btn-danger m-r-20 text-white d-none" id="ExcelReportTicketing">Testing Report Excel</a>
                </div>
            </div>
        </div>
    </div>
</div>

